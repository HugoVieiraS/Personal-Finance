@model PersonalFinance.WebApp.Model.ContaBancaria

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Conta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeBanco" class="control-label"></label>
                <input asp-for="NomeBanco" class="form-control" />
                <span asp-validation-for="NomeBanco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorConta" class="control-label"></label>
                <input asp-for="ValorConta" class="form-control" />
                <span asp-validation-for="ValorConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rendimento" class="control-label"></label>
                <input asp-for="Rendimento" class="form-control" />
                <span asp-validation-for="Rendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

