@model PersonalFinance.WebApp.Model.ContaBancaria

@{
    ViewData["Title"] = "Create";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Conta Bancária</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/home/index">Home</a></li>
                        <li class="breadcrumb-item active">Adicionar conta bancária</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Content Header (Page header) -->
    <section class="content">
        <div class="container-fluid">
            <div class="align-middle">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Adicionar conta bancária</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create" method="post" role="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="NomeBanco"></label>
                                <input asp-for="NomeBanco" class="form-control" placeholder="Data inicial">
                                <span asp-validation-for="NomeBanco" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="ValorConta"></label>
                                <input asp-for="ValorConta" class="form-control" placeholder="Data final">
                                <span asp-validation-for="ValorConta" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Rendimento"></label>
                                <input asp-for="Rendimento" class="form-control" placeholder="Data final">
                                <span asp-validation-for="Rendimento" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Confirmar</button>
                            <button asp-action="Index" class="btn btn-danger">Voltar</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</div>