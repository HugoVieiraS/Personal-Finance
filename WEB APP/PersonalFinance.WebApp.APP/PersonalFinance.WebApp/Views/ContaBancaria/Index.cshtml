@model IEnumerable<PersonalFinance.WebApp.Model.ContaBancaria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

p>
<div class="kt-portlet__head-toolbar">
    <div class="kt-portlet__head-wrapper">
        @Html.ActionLink("Adicionar", "Create", "ContaBancaria", null, new { @class = "btn btn-brand btn-elevate" })
    </div>
</div>
</p>
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomeBanco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorConta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rendimento)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeBanco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorConta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rendimento)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Sem informações</h3>
}
