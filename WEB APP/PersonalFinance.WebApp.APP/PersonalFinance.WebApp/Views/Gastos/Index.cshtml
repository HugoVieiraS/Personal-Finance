@model IEnumerable<PersonalFinance.WebApp.Model.Gastos>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de gastos</h1>

<p>
    <div class="kt-portlet__head-toolbar">
        <div class="kt-portlet__head-wrapper">
            @Html.ActionLink("Adicionar", "Create", "Gastos", null, new { @class = "btn btn-brand btn-elevate" })
        </div>
    </div>
</p>
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeConta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataPagamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataGasto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompetenciaId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeConta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataPagamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataGasto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompetenciaId)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Sem informações</h3>
}
