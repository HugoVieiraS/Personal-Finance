@model PersonalFinance.WebApp.Model.Investimentos

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Investimentos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeInvestimento" class="control-label"></label>
                <input asp-for="NomeInvestimento" class="form-control" />
                <span asp-validation-for="NomeInvestimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorInvestido" class="control-label"></label>
                <input asp-for="ValorInvestido" class="form-control" />
                <span asp-validation-for="ValorInvestido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rendimento" class="control-label"></label>
                <input asp-for="Rendimento" class="form-control" />
                <span asp-validation-for="Rendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInvestimento" class="control-label"></label>
                <input asp-for="DataInvestimento" class="form-control" />
                <span asp-validation-for="DataInvestimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

