@model IEnumerable<PersonalFinance.WebApp.Model.Salario>

@{
    ViewData["Title"] = "Index";
}

<h1>Salario Cadastrado</h1>

<p>
    <div class="kt-portlet__head-toolbar">
        <div class="kt-portlet__head-wrapper">
            @Html.ActionLink("Adicionar", "Create", "Salario", null, new { @class = "btn btn-brand btn-elevate" })
        </div>
    </div>
</p>
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrigemGanho)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataRecebimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorBruto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorLiquido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompetenciaId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrigemGanho)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataRecebimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorBruto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorLiquido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompetenciaId)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Sem informações</h3>
}
